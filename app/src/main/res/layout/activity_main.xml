<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageSwitcher
        android:id="@+id/article_image_switcher_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <ImageSwitcher
        android:id="@+id/article_image_switcher_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <ImageSwitcher
        android:id="@+id/article_image_switcher_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alpha="0.6">

        <View
            android:background="@drawable/top_down_gradient_shape"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

        <View
            android:background="@drawable/bottom_up_gradient_shape"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <View
        android:id="@+id/fade_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tsengsation.resound.ViewHelpers.ResoundNavBar
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.view.ViewPager
            android:id="@+id/article_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>

